{
  "name": "tingkelai-electron",
  "version": "1.0.0",
  "description": "听客来PC客户端",
  "main": "main.js",
  "author": "南京创世德意",
  "CompanyName": "南京创世德意",
  "FileDescription": "听客来",
  "OriginalFilename": "听客来.exe",
  "ProductName": "听客来",
  "InternalName": "听客来",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "release": "electron-builder",
    "build-mac-beta": "cross-env CHANNEL=beta electron-builder",
    "build-mac-release": "cross-env CHANNEL=release electron-builder",
    "build-ia32-beta": "cross-env CHANNEL=beta electron-builder --ia32",
    "build-ia32-release": "cross-env CHANNEL=release electron-builder --ia32",
    "build-x64-beta": "cross-env CHANNEL=beta electron-builder --x64",
    "build-x64-release": "cross-env CHANNEL=release electron-builder --x64",
    "deploy": "rishiqing-deploy --config='.rishiqing-deploy.yml'"
  },
  "build": {
    "productName": "听客来",
    "appId": "tkl",
    "copyright": "Copyright @ 2019 ${author}",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/tkl.ico",
      "type": "distribution"
    },
    "dmg": {
      "artifactName": "听客来-mac-${version}.${ext}",
      "title": "听客来 ${version}",
      "contents": [
        {
          "x": 30,
          "y": 190
        },
        {
          "x": 150,
          "y": 190,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "assets/tkl.ico",
      "publish": {
        "provider": "generic",
        "url": "https://download.timetask.cn/pc-autoupdate/win/win-ia32/${env.CHANNEL}",
        "channel": "${env.CHANNEL}"
      }
    },
    "nsis": {
      "installerIcon": "assets/tkl.ico",
      "uninstallerIcon": "assets/tkl.ico",
      "installerHeaderIcon": "assets/tkl.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "听客来",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  },
  "publish": [
    "github"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishiqing/tingkelai-electron.git"
  },
  "keywords": [],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rishiqing/tingkelai-electron/issues"
  },
  "homepage": "https://github.com/rishiqing/tingkelai-electron#readme",
  "devDependencies": {
    "cross-env": "^6.0.3",
    "electron": "^7.1.6",
    "electron-builder": "^21.2.0",
    "rishiqing-deploy": "^2.0.9"
  },
  "dependencies": {
    "electron-updater": "^4.2.0"
  }
}
